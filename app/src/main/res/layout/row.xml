<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/dk_background_dark"
    android:backgroundTint="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:padding="5dip">

    <TextView
        android:id="@+id/vill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/dk_background"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vill_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dip"

        android:textColor="@color/dk_background"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vill_name"
        android:layout_alignBottom="@+id/coordinates"
        android:layout_alignParentRight="true"
        android:textColor="@color/dk_background"
        android:textSize="12sp" />

</RelativeLayout>
